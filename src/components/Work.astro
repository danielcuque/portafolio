---
import { Time } from '@astro-github-elements/time';
import { jobs } from "@/constants/jobs";
---


<section class="mt-52" id="work-experience">
    <h2 class=`text-lg md:text-3xl font-medium before:[content:'04.'] before:text-primary-50 before:text-lg before:inline`>
      My Working Experience
    </h2>
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
      {
        jobs.map((job) => (
          <li class="card-items">
            <h3 class="text-lg font-medium">{job.title} at 
              <a href={job.link} class="text-primary-500 hover:underline">{job.company}</a>
            </h3>
            <Time format="duration" datetime={job.startDate} tense="past" precision="month" />
            <p class="mt-4">{job.description}</p>
          </li>
        ))
      }
    </ul>
  </section>
  